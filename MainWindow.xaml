<Window x:Class="HuffmanCoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HuffmanCoder"
        mc:Ignorable="d"
        Title="Huffman Coder" Height="150" Width="350" MinWidth="350" MinHeight="150" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="codeButton" Content="Code" HorizontalAlignment="Left" Margin="221,66,0,0" VerticalAlignment="Top" Width="100" Height="30" RenderTransformOrigin="0.144,0.515" Click="codeButton_Click"/>
        <Button x:Name="decodeButton" Content="Decode" HorizontalAlignment="Left" Margin="26,66,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="decodeButton_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" Margin="26,24,0,0" IsEnabled="False"/>
        <Button x:Name="fileButton" Content="File" HorizontalAlignment="Left" Margin="277,24,0,0" VerticalAlignment="Top" Width="44" Click="fileButton_Click" RenderTransformOrigin="2.566,0.735"/>

    </Grid>
</Window>
